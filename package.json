{
  "name": "rmby",
  "version": "0.0.1",
  "description": "Remove files by certain aspects on a given directory",
  "main": "src/rmby.js",
  "scripts": {
    "codecov": "jest --silent --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint \"src/**/*.js\" \"test/**/*.js\"",
    "test": "jest"
  },
  "author": "Yadullah Duman",
  "license": "MIT",
  "devDependencies": {
    "coveralls": "^3.1.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.3.0",
    "prettier": "^2.0.5"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules/",
      "test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testEnvironment": "node"
  }
}
